<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/main.min.css'>
    <script src="https://fb.me/react-15.2.1.js"></script>
    <script src="https://fb.me/react-dom-15.2.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.js"></script>
</head>

<body>
    <h1>React!</h1>
    <% include templates/header.ejs %>

        <div id="app"></div>

        <script type="text/babel">

            var Comment = React.createClass({
              edit: function() {
                alert("editing");
              },
              delete: function() {
                alert("deleting");
              },
              render: function() {
                return(
            <div className="commentContainer">
                <div className="commentText">{this.props.children}</div>
                <button onClick={this.edit} className="button-edit">Edit</button>
                <button onClick={this.delete} className="button-danger">Remove</button>
            </div>
            );
          }
        });

            var CheckBox = React.createClass({

              getInitialState: function() {
                return{
                  checked: true
                }
              },

              handleChecked: function() {
                this.setState({checked: !this.state.checked})
              },

              render: function(){
                  var msg;
                  if(this.state.checked){
                    msg = "checked"
                  } else {
                    msg = "unchecked"
                  }
                  return(
                    <div>
                      <input type="checkbox" defaultChecked={this.state.checked} onChange={this.handleChecked} />
                      <h3>This box is {msg}</h3>
                    </div>
                  );
              }
            });

        ReactDOM.render(
          <div>
            <Comment>Here is text</Comment>
            <Comment>Sample Comment</Comment>
            <Comment>Last one</Comment>
            <CheckBox />
          </div>
          , document.getElementById('app')
          );
        </script>
</body>

</html>
